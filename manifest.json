{
  "manifest_version": 3,
  "name": "YLE Areena Dual Subtitles Extension",
  "version": "1.0",
  "description": "An extension to add dual subtitles on YLE Areena videos.",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://areena.yle.fi/*"],
      "run_at": "document_end",
      "js": ["utils.js", "contentscript.js", "inject.js"],
      "css": ["styles.css"]
    }
  ],
  "host_permissions": ["https://api-free.deepl.com/*", "https://api.deepl.com/*"],
  "permissions": ["scripting", "storage"],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://areena.yle.fi/*"]
    }
  ],
  "action": {
    "default_title": "YLE Dual Subtitles Extension",
    "default_popup": "popup.html"
  },
  "options_page": "extension-options-page/dist/index.html"
}
